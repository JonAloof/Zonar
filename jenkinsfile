pipeline {
  agent none
  stages {
    stage('build') {
      agent { docker { image 'python:3.7.2' } }
      steps {
        sh '''python3 -m venv env
              . ./env/bin/activate
              pip install -r requirements.txt'''
      }
    }
    stage('test') {
      agent { docker { image 'python:3.7.2' } }
      steps {
        sh '''python3 -m venv env
              . ./env/bin/activate
              pip install -r requirements.txt
              python testhelloworld.py'''
      }
      post {
        always {
          junit 'test-reports/*.xml'
        }
      }    
    }
    stage('deploy') {
      agent any
      steps {
        sh 'docker-compose up --detach --build'
        sh "curl http://zonar.unboxthepattern.com:9000/api/hooks/release/builtin/3/874fcbb4bff3514541bdbcba819818c13d458a28574259e15bc6cbc998d5e2ce/ -X POST -H 'Content-Type: application/json' -d '{ \\"version\\": \\"${currentBuild.number}\\" }'"
      }
    }
  }
}