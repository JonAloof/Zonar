pipeline {
  agent none
  stages {
    stage('build') {
      agent { docker { image 'python:3.7.2' } }
      steps {
        sh '''python3 -m venv env
              . ./env/bin/activate
              pip install -r requirements.txt'''
      }
    }
    stage('test') {
      agent { docker { image 'python:3.7.2' } }
      steps {
        sh '''python3 -m venv env
              . ./env/bin/activate
              pip install -r requirements.txt
              python testhelloworld.py'''
      }
      post {
        always {
          junit 'test-reports/*.xml'
        }
      }    
    }
    stage('deploy') {
      agent any
      steps {
        sh 'docker-compose up --detach --build'
      }
    }
  }
}