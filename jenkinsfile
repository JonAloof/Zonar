pipeline {
  agent { docker { image 'python:3.7.2' } }
  stages {
    stage('build') {
      steps {
        sh '''python3 -m venv env
              . ./env/bin/activate
              pip install -r requirements.txt'''
      }
    }
    stage('test') {
      steps {
        sh '''python3 -m venv env
              . ./env/bin/activate
              pip install -r requirements.txt
              python testhelloworld.py'''
      }
      post {
        always {
          junit 'test-reports/*.xml'
        }
      }    
    }
  }
}